{% extends "administracion/admin_base.njk" %}

{% block titulo %} lista de juegos {% endblock %}
 {% block contenido %} 

 <h1>Listado de juegos </h1>
          <div class="container mt-4">
      {% for juego in juegos %}
        <div class="row">
            <div class="col-md-12">
               
                <div class="mt-3">
                    <ul class="list list-inline">
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="ml-2">
                                    <h6 class="mb-0">{{ juego.nombre }}</h6>
                                    <h6>  <a class="col-auto" href="/juegos/{{ juego.id }}">Ficha</a></h6>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column mr-2">
                    <form class="col-auto" action="juegos/{{ juego.id }}" method="post">
                    <input type="hidden" name="_method" value="delete" />
                    <button type="submit" class="btn btn-danger">Borrar</button>
                 </form>
                <a class="col-auto" href="/juegos/editar/{{juego.id}}"><button class="btn btn-primary"> editar</button></a> 
            
                            </div>
                        </li>
                       
                       
                       
                    </ul>
                </div>
            </div>
        </div>
          {% endfor %}
    </div>




{%endblock%}